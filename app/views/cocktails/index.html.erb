<h1>Cocktails List</h1>

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 100%, rgba(0,36,61,0.6) 100%), url('<%= image_path 'beach_cocktail' %>');">
    <div class="banner-content">
      <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="card-description">


              <h2><%= cocktail.name %></h2>
              <p>Top picks</p>
              <p>  <%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %></p>
            </div>
           <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
